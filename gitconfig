[user]
	email = ben.barbour@gmail.com
	name = Ben Barbour
[color]
	ui = true
[color "diff"]
	whitespace = red reverse
[diff]
	tool = meld
[alias]
	stash-unapply = !git stash show -p | git apply -R
	graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --abbrev-commit --date=short
	allgraph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --abbrev-commit --date=short --all
	co = checkout
	ctags = !.git/hooks/ctags
	cdiff = diff --cached
[merge]
	tool = meld
[core]
	mergeoptions = --no-commit
[push]
	default = simple
[init]
	templatedir = ~/.git_template
